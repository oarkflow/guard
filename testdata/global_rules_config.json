{
    "server": {
        "address": "0.0.0.0",
        "port": 8084,
        "read_timeout": 10000000000,
        "write_timeout": 10000000000,
        "idle_timeout": 60000000000,
        "max_connections": 10000,
        "enable_prefork": false,
        "body_limit": 10485760,
        "trusted_proxies": [ "127.0.0.1", "::1" ]
    },
    "engine": {
        "max_concurrent_requests": 1000,
        "request_timeout": 30000000000,
        "enable_metrics": true,
        "enable_events": true,
        "default_action": "allow",
        "failure_mode": "allow",
        "global_rules": [
            {
                "name": "Global Rate Limiting",
                "description": "System-wide rate limiting to prevent DDoS attacks",
                "detectors": [
                    {
                        "name": "rate_limit_detector",
                        "enabled": true,
                        "parameters": {
                            "window_size": "1m",
                            "max_requests": 100,
                            "key_template": "global_rate:{ip}",
                            "burst_allowed": 20,
                            "cleanup_period": "5m"
                        },
                        "actions": [
                            {
                                "name": "warning_action",
                                "condition": {
                                    "min_severity": 2,
                                    "min_confidence": 0.5
                                }
                            },
                            {
                                "name": "captcha_action",
                                "condition": {
                                    "min_severity": 4,
                                    "min_confidence": 0.7
                                }
                            },
                            {
                                "name": "incremental_block_action",
                                "condition": {
                                    "min_severity": 6,
                                    "min_confidence": 0.8
                                }
                            }
                        ]
                    }
                ],
                "priority": 100,
                "enabled": true
            },
            {
                "name": "Global Security Scanning",
                "description": "Detect common attack patterns across all endpoints",
                "detectors": [
                    {
                        "name": "sql_injection_detector",
                        "enabled": true,
                        "parameters": {
                            "custom_patterns": [
                                "(?i)(union|select|insert|update|delete|drop|create|alter)\\s+",
                                "(?i)'\\s*(or|and)\\s*'",
                                "(?i)\\b(exec|execute|sp_|xp_)\\w*\\s*\\(",
                                "(?i)--\\s*$",
                                "(?i)/\\*.*\\*/"
                            ],
                            "check_headers": true,
                            "check_query_params": true,
                            "check_body": true,
                            "max_body_size": 1048576
                        },
                        "actions": [
                            {
                                "name": "warning_action",
                                "condition": {
                                    "min_severity": 3,
                                    "min_confidence": 0.5
                                }
                            },
                            {
                                "name": "block_action",
                                "condition": {
                                    "min_severity": 5,
                                    "min_confidence": 0.7
                                }
                            }
                        ]
                    },
                    {
                        "name": "xss_detector",
                        "enabled": true,
                        "parameters": {
                            "patterns": [
                                "(?i)<\\s*script[^>]*>",
                                "(?i)javascript\\s*:",
                                "(?i)on\\w+\\s*=",
                                "(?i)<\\s*iframe[^>]*>",
                                "(?i)eval\\s*\\(",
                                "(?i)alert\\s*\\("
                            ],
                            "check_all_params": true,
                            "decode_url": true,
                            "decode_html": true
                        },
                        "actions": [
                            {
                                "name": "warning_action",
                                "condition": {
                                    "min_severity": 2,
                                    "min_confidence": 0.4
                                }
                            },
                            {
                                "name": "captcha_action",
                                "condition": {
                                    "min_severity": 4,
                                    "min_confidence": 0.6
                                }
                            },
                            {
                                "name": "block_action",
                                "condition": {
                                    "min_severity": 6,
                                    "min_confidence": 0.7
                                }
                            }
                        ]
                    },
                    {
                        "name": "path_traversal_detector",
                        "enabled": true,
                        "parameters": {
                            "patterns": [
                                "\\.\\./",
                                "\\.\\.\\\\",
                                "%2e%2e%2f",
                                "%2e%2e%5c",
                                "..%2f",
                                "..%5c",
                                "etc/passwd",
                                "windows/system32",
                                "/proc/",
                                "boot.ini"
                            ],
                            "check_path": true,
                            "check_query_params": true,
                            "normalize_path": true
                        },
                        "actions": [
                            {
                                "name": "block_action",
                                "condition": {
                                    "min_severity": 1,
                                    "min_confidence": 0.8
                                }
                            }
                        ]
                    }
                ],
                "priority": 95,
                "enabled": true
            },
            {
                "name": "Global Behavioral Analysis",
                "description": "Analyze user behavior patterns for anomalies",
                "detectors": [
                    {
                        "name": "suspicious_user_agent_detector",
                        "enabled": true,
                        "parameters": {
                            "suspicious_patterns": [
                                "(?i)(bot|crawler|spider|scraper)",
                                "(?i)(curl|wget|python|java)",
                                "(?i)(nmap|nikto|sqlmap|burp)",
                                "(?i)(scanner|exploit|hack)",
                                "^$",
                                "^\\s*$"
                            ],
                            "whitelist_patterns": [
                                "(?i)googlebot",
                                "(?i)bingbot",
                                "(?i)facebookexternalhit",
                                "(?i)twitterbot"
                            ],
                            "severity": 3
                        },
                        "actions": [
                            {
                                "name": "warning_action",
                                "condition": {
                                    "min_severity": 2,
                                    "min_confidence": 0.5
                                }
                            },
                            {
                                "name": "captcha_action",
                                "condition": {
                                    "min_severity": 3,
                                    "min_confidence": 0.7
                                }
                            }
                        ]
                    },
                    {
                        "name": "geo_location_detector",
                        "enabled": true,
                        "parameters": {
                            "blocked_countries": [ "CN", "RU", "KP", "IR" ],
                            "allowed_countries": [ ],
                            "use_cloudflare_headers": true,
                            "severity": 4
                        },
                        "actions": [
                            {
                                "name": "warning_action",
                                "condition": {
                                    "min_severity": 3,
                                    "min_confidence": 0.6
                                }
                            },
                            {
                                "name": "captcha_action",
                                "condition": {
                                    "min_severity": 4,
                                    "min_confidence": 0.8
                                }
                            },
                            {
                                "name": "block_action",
                                "condition": {
                                    "min_severity": 5,
                                    "min_confidence": 0.9
                                }
                            }
                        ]
                    }
                ],
                "priority": 80,
                "enabled": true
            },
            {
                "name": "Global Brute Force Protection",
                "description": "System-wide brute force attack detection",
                "detectors": [
                    {
                        "name": "brute_force_detector",
                        "enabled": true,
                        "parameters": {
                            "login_endpoints": [ "/login", "/auth", "/signin", "/api/auth", "/admin", "/wp-admin" ],
                            "max_attempts": 5,
                            "window_size": "10m",
                            "key_template": "global_brute_force:{ip}",
                            "track_usernames": true,
                            "username_limit": 10
                        },
                        "actions": [
                            {
                                "name": "warning_action",
                                "condition": {
                                    "min_severity": 2,
                                    "min_confidence": 0.5
                                }
                            },
                            {
                                "name": "captcha_action",
                                "condition": {
                                    "min_severity": 4,
                                    "min_confidence": 0.7
                                }
                            },
                            {
                                "name": "incremental_block_action",
                                "condition": {
                                    "min_severity": 6,
                                    "min_confidence": 0.8
                                }
                            },
                            {
                                "name": "suspension_action",
                                "condition": {
                                    "min_severity": 8,
                                    "min_confidence": 0.9
                                }
                            }
                        ]
                    }
                ],
                "priority": 90,
                "enabled": true
            }
        ]
    },
    "store": {
        "type": "memory",
        "address": "",
        "password": "",
        "database": 0,
        "prefix": "global_guard:",
        "max_retries": 3,
        "timeout": 5000000000,
        "options": {
            "cleanup_interval": "1m",
            "max_memory_usage": "100MB"
        }
    },
    "events": {
        "buffer_size": 1000,
        "worker_count": 4,
        "enable_async": true,
        "retry_attempts": 3
    },
    "plugins": {
        "detectors": {
            "rate_limit_detector": {
                "enabled": true,
                "priority": 90,
                "parameters": { }
            },
            "sql_injection_detector": {
                "enabled": true,
                "priority": 100,
                "parameters": { }
            },
            "xss_detector": {
                "enabled": true,
                "priority": 95,
                "parameters": { }
            },
            "path_traversal_detector": {
                "enabled": true,
                "priority": 85,
                "parameters": { }
            },
            "brute_force_detector": {
                "enabled": true,
                "priority": 80,
                "parameters": { }
            },
            "suspicious_user_agent_detector": {
                "enabled": true,
                "priority": 70,
                "parameters": { }
            },
            "geo_location_detector": {
                "enabled": true,
                "priority": 60,
                "parameters": { }
            }
        },
        "actions": {
            "block_action": {
                "enabled": true,
                "priority": 100,
                "parameters": {
                    "default_duration": "10m",
                    "max_duration": "24h",
                    "block_message": "Access denied due to global security policy violation",
                    "log_blocks": true,
                    "escalation_rules": [
                        {
                            "violation_count": 1,
                            "duration": "10m",
                            "permanent": false
                        },
                        {
                            "violation_count": 3,
                            "duration": "1h",
                            "permanent": false
                        },
                        {
                            "violation_count": 5,
                            "duration": "6h",
                            "permanent": false
                        },
                        {
                            "violation_count": 10,
                            "duration": "0",
                            "permanent": true
                        }
                    ]
                }
            },
            "incremental_block_action": {
                "enabled": true,
                "priority": 90,
                "parameters": {
                    "initial_duration": "2m",
                    "max_duration": "2h",
                    "multiplier": 2.0,
                    "reset_after": "24h",
                    "log_blocks": true
                }
            },
            "suspension_action": {
                "enabled": true,
                "priority": 85,
                "parameters": {
                    "default_duration": "2h",
                    "max_duration": "7d",
                    "require_manual_review": true,
                    "notification_email": "security@example.com"
                }
            },
            "captcha_action": {
                "enabled": true,
                "priority": 75,
                "parameters": {
                    "provider": "simple",
                    "site_key": "",
                    "secret_key": "",
                    "threshold": 0.5,
                    "duration": "15m",
                    "max_attempts": 3,
                    "difficulty": "medium"
                }
            },
            "warning_action": {
                "enabled": true,
                "priority": 50,
                "parameters": {
                    "log_warnings": true,
                    "include_details": true,
                    "rate_limit_warnings": true,
                    "max_warnings_per_hour": 50
                }
            }
        },
        "handlers": {
            "security_logger_handler": {
                "enabled": true,
                "priority": 100,
                "parameters": {
                    "log_file": "global_security_events.log",
                    "log_level": "INFO",
                    "event_types": [ "*" ],
                    "format": "json",
                    "max_file_size": "100MB",
                    "max_backups": 5,
                    "compress": true,
                    "include_request_details": true
                }
            },
            "metrics_handler": {
                "enabled": true,
                "priority": 70,
                "parameters": {
                    "export_interval": "30s",
                    "metrics_endpoint": "/metrics",
                    "include_labels": true,
                    "histogram_buckets": [ 0.1, 0.5, 1.0, 2.5, 5.0, 10.0 ]
                }
            }
        },
        "load_path": "./plugins",
        "auto_load": true
    },
    "security": {
        "enable_security_headers": true,
        "allowed_origins": [ "*" ],
        "allowed_methods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH" ],
        "allowed_headers": [ "*" ],
        "max_request_size": 10485760,
        "enable_rate_limiting": true,
        "cors_settings": {
            "allow_credentials": false,
            "max_age": 86400,
            "expose_headers": [ "X-Request-ID", "X-Rate-Limit-Remaining" ]
        },
        "security_headers": {
            "x_content_type_options": "nosniff",
            "x_frame_options": "DENY",
            "x_xss_protection": "1; mode=block",
            "strict_transport_security": "max-age=31536000; includeSubDomains",
            "referrer_policy": "strict-origin-when-cross-origin",
            "content_security_policy": "default-src 'self'"
        }
    },
    "logging": {
        "level": "INFO",
        "format": "json",
        "output": "stdout",
        "max_size": 100,
        "max_backups": 3,
        "max_age": 28,
        "compress": true,
        "fields": {
            "service": "global-guard",
            "version": "2.0.0",
            "environment": "demo"
        }
    },
    "monitoring": {
        "health_check_interval": "30s",
        "metrics_collection": true,
        "performance_monitoring": true,
        "error_tracking": true,
        "alerts": {
            "high_cpu_threshold": 80,
            "high_memory_threshold": 85,
            "high_error_rate_threshold": 5,
            "response_time_threshold": "1s"
        }
    }
}
