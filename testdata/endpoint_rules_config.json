{
    "server": {
        "address": "0.0.0.0",
        "port": 8083,
        "read_timeout": 10000000000,
        "write_timeout": 10000000000,
        "idle_timeout": 60000000000,
        "max_connections": 10000,
        "enable_prefork": false,
        "body_limit": 10485760,
        "trusted_proxies": [ "127.0.0.1", "::1" ]
    },
    "engine": {
        "max_concurrent_requests": 1000,
        "request_timeout": 30000000000,
        "enable_metrics": true,
        "enable_events": true,
        "default_action": "allow",
        "failure_mode": "allow",
        "endpoint_rules": [
            {
                "name": "Login Endpoint Protection",
                "description": "Comprehensive protection for login endpoints",
                "endpoints": [ "/login", "/auth", "/signin", "/api/auth" ],
                "methods": [ "POST" ],
                "detectors": [
                    {
                        "name": "brute_force_detector",
                        "enabled": true,
                        "parameters": {
                            "max_attempts": 3,
                            "window_size": "5m",
                            "track_usernames": true,
                            "username_limit": 5
                        },
                        "actions": [
                            {
                                "name": "captcha_action",
                                "condition": {
                                    "min_severity": 3,
                                    "min_confidence": 0.6
                                }
                            },
                            {
                                "name": "incremental_block_action",
                                "condition": {
                                    "min_severity": 5,
                                    "min_confidence": 0.8
                                }
                            }
                        ]
                    },
                    {
                        "name": "rate_limit_detector",
                        "enabled": true,
                        "parameters": {
                            "window_size": "1m",
                            "max_requests": 5,
                            "burst_allowed": 2
                        },
                        "actions": [
                            {
                                "name": "warning_action",
                                "condition": {
                                    "min_severity": 2,
                                    "min_confidence": 0.5
                                }
                            },
                            {
                                "name": "block_action",
                                "condition": {
                                    "min_severity": 4,
                                    "min_confidence": 0.7
                                }
                            }
                        ]
                    }
                ],
                "priority": 100,
                "enabled": true
            },
            {
                "name": "API Endpoint Protection",
                "description": "Protection for API endpoints against injection attacks",
                "endpoints": [ "/api/*", "/v1/*", "/v2/*" ],
                "methods": [ "GET", "POST", "PUT", "DELETE" ],
                "detectors": [
                    {
                        "name": "sql_injection_detector",
                        "enabled": true,
                        "parameters": {
                            "check_headers": true,
                            "check_query_params": true,
                            "check_body": true,
                            "custom_patterns": [
                                "(?i)(union|select|insert|update|delete|drop)\\s+",
                                "(?i)'\\s*(or|and)\\s*'",
                                "(?i)--\\s*$"
                            ]
                        },
                        "actions": [
                            {
                                "name": "block_action",
                                "condition": {
                                    "min_severity": 1,
                                    "min_confidence": 0.7
                                }
                            }
                        ]
                    },
                    {
                        "name": "xss_detector",
                        "enabled": true,
                        "parameters": {
                            "patterns": [
                                "(?i)<\\s*script[^>]*>",
                                "(?i)javascript\\s*:",
                                "(?i)on\\w+\\s*="
                            ],
                            "check_all_params": true,
                            "decode_url": true
                        },
                        "actions": [
                            {
                                "name": "warning_action",
                                "condition": {
                                    "min_severity": 2,
                                    "min_confidence": 0.5
                                }
                            },
                            {
                                "name": "block_action",
                                "condition": {
                                    "min_severity": 4,
                                    "min_confidence": 0.6
                                }
                            }
                        ]
                    }
                ],
                "priority": 90,
                "enabled": true
            },
            {
                "name": "File Upload Protection",
                "description": "Protection for file upload endpoints",
                "endpoints": [ "/upload", "/api/upload", "/files/upload" ],
                "methods": [ "POST", "PUT" ],
                "detectors": [
                    {
                        "name": "path_traversal_detector",
                        "enabled": true,
                        "parameters": {
                            "patterns": [
                                "\\.\\./",
                                "\\.\\.\\\\",
                                "%2e%2e%2f",
                                "etc/passwd",
                                "windows/system32"
                            ],
                            "check_path": true,
                            "check_query_params": true
                        },
                        "actions": [
                            {
                                "name": "block_action",
                                "condition": {
                                    "min_severity": 1,
                                    "min_confidence": 0.8
                                }
                            }
                        ]
                    },
                    {
                        "name": "rate_limit_detector",
                        "enabled": true,
                        "parameters": {
                            "window_size": "5m",
                            "max_requests": 10,
                            "burst_allowed": 3
                        },
                        "actions": [
                            {
                                "name": "captcha_action",
                                "condition": {
                                    "min_severity": 3,
                                    "min_confidence": 0.6
                                }
                            }
                        ]
                    }
                ],
                "priority": 85,
                "enabled": true
            }
        ]
    },
    "store": {
        "type": "memory",
        "address": "",
        "password": "",
        "database": 0,
        "prefix": "endpoint_guard:",
        "max_retries": 3,
        "timeout": 5000000000,
        "options": {
            "cleanup_interval": "1m",
            "max_memory_usage": "100MB"
        }
    },
    "events": {
        "buffer_size": 1000,
        "worker_count": 4,
        "enable_async": true,
        "retry_attempts": 3
    },
    "plugins": {
        "detectors": {
            "rate_limit_detector": {
                "enabled": true,
                "priority": 90,
                "parameters": { }
            },
            "sql_injection_detector": {
                "enabled": true,
                "priority": 100,
                "parameters": { }
            },
            "xss_detector": {
                "enabled": true,
                "priority": 95,
                "parameters": { }
            },
            "path_traversal_detector": {
                "enabled": true,
                "priority": 85,
                "parameters": { }
            },
            "brute_force_detector": {
                "enabled": true,
                "priority": 80,
                "parameters": { }
            },
            "suspicious_user_agent_detector": {
                "enabled": true,
                "priority": 70,
                "parameters": {
                    "suspicious_patterns": [
                        "(?i)(bot|crawler|spider|scraper)",
                        "(?i)(curl|wget|python|java)",
                        "(?i)(nmap|nikto|sqlmap|burp)"
                    ],
                    "severity": 3
                }
            }
        },
        "actions": {
            "block_action": {
                "enabled": true,
                "priority": 100,
                "parameters": {
                    "default_duration": "5m",
                    "max_duration": "1h",
                    "block_message": "Access denied due to security policy violation"
                }
            },
            "incremental_block_action": {
                "enabled": true,
                "priority": 90,
                "parameters": {
                    "initial_duration": "1m",
                    "max_duration": "30m",
                    "multiplier": 2.0
                }
            },
            "captcha_action": {
                "enabled": true,
                "priority": 75,
                "parameters": {
                    "provider": "simple",
                    "duration": "10m",
                    "max_attempts": 3,
                    "difficulty": "medium"
                }
            },
            "warning_action": {
                "enabled": true,
                "priority": 50,
                "parameters": {
                    "log_warnings": true,
                    "include_details": true
                }
            }
        },
        "handlers": {
            "security_logger_handler": {
                "enabled": true,
                "priority": 100,
                "parameters": {
                    "log_file": "endpoint_security_events.log",
                    "log_level": "INFO",
                    "event_types": [ "*" ],
                    "format": "json"
                }
            }
        },
        "load_path": "./plugins",
        "auto_load": true
    },
    "security": {
        "enable_security_headers": true,
        "allowed_origins": [ "*" ],
        "allowed_methods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
        "allowed_headers": [ "*" ],
        "max_request_size": 10485760,
        "enable_rate_limiting": true
    },
    "logging": {
        "level": "INFO",
        "format": "json",
        "output": "stdout",
        "max_size": 100,
        "max_backups": 3,
        "max_age": 28,
        "compress": true,
        "fields": {
            "service": "endpoint-guard",
            "version": "2.0.0",
            "environment": "demo"
        }
    }
}
