{
    "action": {
        "name": "multiple_signup_action",
        "enabled": true,
        "priority": 80,
        "parameters": {
            "log_multiple_signups": true,
            "notification_threshold": 3,
            "window_duration": "1h",
            "max_signups_per_window": 2,
            "block_duration": "1h",
            "enable_notifications": true,
            "escalation_rules": [
                {
                    "signup_count": 3,
                    "action": "log",
                    "description": "Log multiple signup attempts"
                },
                {
                    "signup_count": 5,
                    "action": "warn",
                    "description": "Send warning notification"
                },
                {
                    "signup_count": 10,
                    "action": "block",
                    "description": "Temporarily block IP",
                    "duration": "1h"
                },
                {
                    "signup_count": 20,
                    "action": "permanent_block",
                    "description": "Permanently block IP"
                }
            ]
        }
    }
}
